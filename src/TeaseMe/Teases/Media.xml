<?xml version="1.0" encoding="utf-8" ?>
<Tease scriptVersion="v0.1">
  <Title>Media</Title>
  <Description>A sample tease showing the use of media.</Description>

  <!-- 
  Specify the directory where the media are stored.
  If you don't put this element in, the media should be in the same directory as the tease script (xml).
  -->
  <MediaDirectory>Media</MediaDirectory>
  
  <Pages>
    <Page id="start">
      <!-- Show an image. -->
      <Image id="2.png" />
      <Button target="2">Next</Button>
    </Page>
    <Page id="2">
      <!-- Show a video. -->
      <Video id="3.wmv" />
      <Button target="3">Next</Button>
    </Page>
    <Page id="3">
      <!-- Play an audio file. -->
      <Audio id="4.wav" />
      
      <!-- An audio file and image can be combined in the same page,
      a combination of audio and video or image and video is not allowed as it makes less sense. -->
      <Image id="2.png" />
      <Button target="4">Next</Button>
    </Page>
    <Page id="4">
      <Text>The end.</Text>
      
      <!-- Show a random image in the media directory. -->
      <Image id="*.jpg" />
    </Page>
  </Pages>
</Tease>