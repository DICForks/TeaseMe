<?xml version="1.0" encoding="utf-8" ?>
<Tease scriptVersion="v0.1">
  <Title>Delay</Title>
  <Description>A sample tease showing the use of delay and (variable) flags.</Description>
  <Pages>
    <Page id="start">
      <Text>Welcome to this tease.</Text>
      <!-- A simple delay (style=normal), after 5 seconds you will be navigated to page 2. -->
      <Delay seconds="5" target="2" />
    </Page>

    <Page id="2">
      <Text>Two</Text>
      <!-- A normal delay (seconds remaining is shown to the user), after 5 seconds you will be navigated to page 3. -->      
      <Delay seconds="5" target="3" style="normal" />
    </Page>

    <Page id="3">
      <Text>Three</Text>
      <!-- A secret delay (seconds remaining is shown as question marks). -->
      <Delay seconds="5" target="4" style="secret" />
    </Page>

    <Page id="4">
      <Text>Four</Text>
      <!-- A hidden delay (no indication is shown). -->
      <Delay seconds="5" target="5" style="hidden" />
    </Page>

    <Page id="5">
      <Text>Five</Text>
      <!-- A random delay somewhere between 5 to 15 seconds. -->
      <Delay seconds="(5..15)" target="6" />
      
      <!-- If the button is pressed a flag named 'came' will be set. -->
      <Button target="6" set="came">Oops</Button>
    </Page>

    <Page id="6">
      <Text>Take a rest, if you need it.</Text>
      
      <!-- This delay will only be used if the flag named 'came' is set (by pressing the button on page 5). -->
      <Delay if-set="came" seconds="10" target="end" />

      <!-- If the button on page 5 was not pressed, flag 'came' is not set. -->
      <Button if-not-set="came" target="end">No, I'm ok</Button>
    </Page>

    <Page id="end">
      <Text>The end</Text>
    </Page>
    
  </Pages>
</Tease>